[Unit]
Description=autossh #%i
Wants=network-online.target
After=network-online.target

[Service]
Type=simple
EnvironmentFile=/opt/growbe/autossh/%i
ExecStart=/usr/bin/autossh -N -M 0 -o "ExitOnForwardFailure=yes" -o "ServerAliveInterval=180" -o "ServerAliveCountMax=3" -o "PubkeyAuthentication=yes" -o "PasswordAuthentication=no" -i ${KEY} -R ${FORWARD} ${REMOTE}
Restart=always
RestartSec=60

[Install]
WantedBy=multi-user.target